{
  "extends": "@tsconfig/node20/tsconfig.json",
  "include": [
    "src/*",
    "src/**/*",
    "global.d.ts",
  ],
  "exclude": [
    "**/__tests__",
  ],
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "target": "ESNext",
    "noEmit": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "lib": [
      "DOM"
    ],
    "types": [
      "node"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
    }
  }
}